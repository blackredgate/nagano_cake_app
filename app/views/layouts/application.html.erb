  <body>
    <header>
      <nav class="navbar navbar-expand-lg border-bottom">
        <div class="container">
          <a class="navbar-brand" href="/">ながのCAKE</a>
          <ul class="navbar-nav ml-auto">
            <li>About</li>
            <li>商品一覧</li>
            <li>新規登録</li>
            <li>ログイン</li>
          </ul>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="border-top">
      </div>
    </footer>
  </body>
</html>
