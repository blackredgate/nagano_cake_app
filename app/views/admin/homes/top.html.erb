<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">注文履歴一覧</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_detail_path(o.id) do %><%= order.created_at %><% end %></td>
              <td><%= order.customer.last_name%><%= order.customer.first_name%></td>
              <td><%= order.amount %></td>
              <td></td>
            </tr>
          <% end %>
          <%= paginate @orders %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
