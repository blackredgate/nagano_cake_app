<div class="container">
  <div class="row my-4">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <p class="bg-secondary">注文履歴詳細</p>
      <table class="table table-borderless">
        <tr><td class="table-active text-nowrap">購入者</td><td class="text-nowrap"><%= @customer.last_name %><%= " " %><%= @customer.first_name %></td></tr>
        <tr><td class="table-active text-nowrap">注文日</td><td class="text-nowrap"><%= @order.created_at %></td></tr>
        <tr><td class="table-active text-nowrap">配送先</td><td class="text-nowrap"><%= @customer.postal_code %><%= " " %><%= @customer.address %></td></tr>
        <tr><td class="table-active text-nowrap">支払方法</td><td class="text-nowrap"><%= @order.payment_method %></td></tr>
        <tr><td class="table-active text-nowrap">注文ステータス</td></tr>
      </table>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
            <td>制作ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <td><%= image_tag order_detail.cart_item.item.get_image(100,100) %><%= "　" %><%= order_detail.cart_item.item.name %></td>
            <td><%= order_detail.cart_item.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.cart_item.subtotal %></td>
            <% @total += order_detail.cart_item.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
