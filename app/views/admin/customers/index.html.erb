<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">会員一覧</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <p class="text-success"><string>有効</string></p>
                <% else %>
                  <p class="text-muted"><string>退会</string></p>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
