<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">商品詳細</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-9">
      <div class="row">
        <div class-"col-md-4">
          <%= image_tag @item.get_image(150,150) %>
        </div>
        <div class-"col-md-offset-1 col-md-7">
          <div class="row">
            <div class="col-md-6 text-nowrap">
              <p>商品名</p>
              <p>商品説明</p>
              <p>税込価格(税抜価格)</p>
            </div>
            <div class="col-md-6 text-nowrap">
              <p><%= @item.name %></p>
              <p><%= @item.introduction %></p>
              <p><%= number_with_delimiter((@item.price * 1.08).round) %>(<%= @item.price %>)円</p>
            </div>
          </div>
          
          <div class="center-block">
            <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
