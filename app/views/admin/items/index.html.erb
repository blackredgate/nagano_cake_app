<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">商品一覧</p>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-2">
      <h3>
        <%= link_to new_admin_item_path, class: 'text-dark' do %>
          +
        <% end %>
      </h3>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
              <td><%= item.price %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
          <%= paginate @items %>
        </tbody>
      </table>

    </div>
  </div>
</div>
