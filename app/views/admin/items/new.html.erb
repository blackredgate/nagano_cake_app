<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">商品新規登録</p>
    </div>
  </div>
  
  
  <div class="row my-4">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
          <div class="row-my-1 d-inline-flex">
            <div class="col-md-4 text-nowrap">
              <label>商品画像</label>
            </div>
            <div class="col-md-8">
              <%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
          
          <div class="row-my-1 d-inline-flex">
            <div class="col-md-4 text-nowrap">
              <label>商品名</label>
            </div>
            <div class="col-md-8">
              <%= f.text_field :name %>
            </div>
          </div>
          
          <div class="row-my-1 d-inline-flex">
            <div class="col-md-4 text-nowrap">
              <label>商品説明</label>
            </div>
            <div class="col-md-8">
              <%= f.text_area :introduction %>
            </div>
          </div>
          
          <div class="row-my-1 d-inline-flex">
            <div class="col-md-4 text-nowrap">
              <label>税抜価格</label>
            </div>
            <div class="col-md-8 d-inline-flex">
              <%= f.text_field :price %> <p>円</p>
            </div>
          </div>
          
          <div class="center-block">
            <%= f.submit '新規登録' %>
          </div>
        <% end %>
      </div>
  </div>
</div>
