<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">ショッピングカート</p>
    </div>
  </div>
    
  <div class="row my-4">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.get_image(100,100) %><%= "　" %><%= cart_item.name %></td>
              <td><%= cart_item.amount %></td>
              <td><%= number_with_delimiter((cart_item.price * 1.08).round) %></td>
              <td><%= number_with_delimiter(((cart_item.price * 1.08) * cart_item.price).round) %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
