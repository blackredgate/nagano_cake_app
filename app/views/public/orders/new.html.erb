<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">注文情報入力</p>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="row my-3">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <%= form_with model: @order do |f| %>
            <p><strong>支払方法</strong></p>
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
          <% end %>
        </div>
      </div>

      <div class="row my-3">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <p><strog>お届け先</strog></p>
          <%= @customer.postal_code %>
          <%= @customer.address %>
        </div>
      </div>
      
      <div class="row my-3">
        <div class="col-md-5"></div>
        <div class="col-md-4">
          <%= link_to "確認画面に進む", orders_confim_path, class:'btn btn-sm btn-primary' %>
        </div>
      </div>
    </div>
  </div>

</div>
