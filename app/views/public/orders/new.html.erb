<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">注文情報入力</p>
    </div>
  </div>

  <div class="row my-4">
    <%= form_with model: @order, url: orders_confirm_path do |f| %>
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="row my-3">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <p><strong>支払方法</strong></p>
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.hidden_field :postage, :value => 800 %>
            <%= f.hidden_field :shipping_name, :value => current_customer.last_name + current_customer.first_name %>
            <%= f.hidden_field :shipping_postal_code, :value => current_customer.postal_code %>
            <%= f.hidden_field :shipping_address, :value => current_customer.address %>
        </div>
      </div>

      <div class="row my-3">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <p><strog>お届け先</strog></p>
          <p>ご自身の住所</p>
          <%= current_customer.postal_code %>
          <%= current_customer.address %>
        </div>
      </div>

      <div class="row my-3">
        <div class="col-md-5"></div>
        <div class="col-md-4">
          <%= f.submit "確認画面に進む", class: 'btn btn-sm btn-primary' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
