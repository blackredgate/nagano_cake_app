<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-8">
      <p class="bg-secondary">注文履歴詳細</p>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-5 text-nowrap">
      <p>注文情報</p>
      <table class="table">
        <tr><td>注文日</td><td><%= @order.created_at %></td></tr>
        <tr><td>配送先</td><td>〒<%= @order.shipping_postal_code %><br><%= @order.shipping_address %><br><%= @order.shipping_name %></td></tr>
        <tr><td>支払方法</td><td><%= @order.payment_method_i18n %></td></tr>
        <tr><td>ステータス</td><td></td></tr>
      </table>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4">
    　<p>請求情報</p>
      <table class="table">
        <tr><td>商品合計</td><td><%= @total %></td></tr>
        <tr><td>配送料</td><td><%= @order.postage %></td></tr>
        <tr><td>ご請求額</td><td><%= @total + @order.postage %></td></tr>
      </table>
    </div>
  </div>

  <div class="row my-4">
    <p>注文内容</p>
    <table class="table">
      <thead>
        <tr>
          <td>商品</td>
          <td>単価(税込)</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_including_tax %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price_including_tax * order_detail.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
