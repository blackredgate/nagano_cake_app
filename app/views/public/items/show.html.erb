<div class="container">
  <div class="row my-4">
    <%= render 'homes/sidebar' %>
    
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4">
          <%= image_tag @item.get_image(200,200) %>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-6">
          <h3><%= @item.name %></h3>
          <p><%= @item.introduction %></p>
          <p>￥　<%= number_with_delimiter((@item.price * 1.08).round) %>(税込)</p>
          
          <div>
            <%= link_to "カートに入れる", items_path, class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
