<div class="container">
  <div class="row my-4">
    <div class="col-md-3">
      <p class="bg-secondary">会員情報編集</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-8">
      <%= form_with model: @customer, url: customers_information_path(current_customer.id), method: :patch do |f| %>
        <div class="row">
          <div class="col-md-3">
            <label>氏名</label>
          </div>
          <div class="col-md-9 d-inline-flex">
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-3">
            <label>フリガナ</label>
          </div>
          <div class="col-md-9 d-inline-flex">
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-3">
            <label>郵便番号</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :postal_code %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-3">
            <label>住所</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :address, size: 50 %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-3">
            <label>電話番号</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :telephone_number %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-3">
            <label>メールアドレス</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :email %>
          </div>
        </div>
        
        <div class="d-inline-flex">
          <div class="mx-4">
            <%= f.submit '編集内容を保存', class:'btn btn-sm btn-success' %>
          </div>
          <div class="mx-4">
            <%= link_to "退会する", customers_unsubscribe_path, class:'btn btn-sm btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
