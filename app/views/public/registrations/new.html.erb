<div class="container">
  <div class="row my-4">
    <div class="col-md-3 text-nowrap">
      <p class="bg-secondary">新規会員登録</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-md-3">
            <p>名前</p>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.label :last_name, "(姓)" %>
              <%= f.text_field :last_name %>
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-3">
            <p>フリガナ</p>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana %>
              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="field col-md-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="field col-md-3 text-nowrap">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.text_field :postal_code %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="field col-md-3 ">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.text_field :address %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="field col-md-3 text-nowrap">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.text_field :telephone_number %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="field col-md-3 text-nowrap">
            <%= f.label :password, "パスワード(6文字以上)" %>
          </div>
          <div class="col-md-9">
            <div class="field">
              <!--<% if @minimum_password_length %>-->
              <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
              <!--<% end %>-->
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="field col-md-3 text-nowrap">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
          </div>
          <div class="col-md-9">
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
        
          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
      <% end %>
      
    </div>
  </div>
  
  <div class="row-4">
    <div class="col-md-3 text-nowrap">
      <p class="bg-secondary">既に登録済みの方</p>
      <%= render "public/shared/links" %>
    </div>
  </div>
  
</div>
